{
  "private": true,
  "license": "WTFPL",
  "type": "module",
  "scripts": {
    "dev": "vite --open --host",
    "dev:tsc": "tsc --noEmit --watch",
    "build": "npm run lint && tsc && npm run build:only",
    "build:only": "vite build",
    "lint": "npm run lint:scss && npm run lint:ts && npm run lint:html",
    "lint:ts": "prettier --write \"./src/**/*.{js,jsx,ts,tsx}\" && eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:scss": "prettier --write \"./src/**/*.scss\" && stylelint \"./src/**/*.scss\" --custom-syntax postcss-scss",
    "lint:html": "prettier --write \"./**/*.html\"",
    "preview": "npm run build && npm run preview:only",
    "preview:only": "vite preview --open --host",
    "deploy": "npm run build && gh-pages -d \"./dist\""
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.7",
    "clsx": "^2.0.0",
    "i18next": "^23.6.0",
    "i18next-browser-languagedetector": "^7.1.0",
    "i18next-http-backend": "^2.2.2",
    "just-union": "^3.2.0",
    "minisearch": "^6.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-focus-lock": "^2.9.6",
    "react-i18next": "^13.3.1",
    "react-redux": "^8.1.3",
    "react-select": "^5.7.7",
    "react-tooltip": "^5.21.5",
    "redux-localstorage": "^0.4.1",
    "remove-accents": "^0.5.0",
    "usehooks-ts": "^2.9.1"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.2.1",
    "@types/node": "^20.8.7",
    "@types/react": "^18.2.31",
    "@types/react-dom": "^18.2.14",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "@vitejs/plugin-react-swc": "^3.4.0",
    "autoprefixer": "^10.4.16",
    "browserslist-to-esbuild": "^1.2.0",
    "eslint": "^8.52.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "gh-pages": "^6.0.0",
    "postcss": "^8.4.31",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.0.3",
    "sass": "^1.69.4",
    "sharp": "^0.32.6",
    "stylelint": "^15.11.0",
    "stylelint-config-recommended-scss": "^13.0.0",
    "stylelint-scss": "^5.2.1",
    "svgo": "^3.0.2",
    "typescript": "^5.2.2",
    "unplugin-inject-preload": "^1.1.1",
    "vite": "^4.5.0",
    "vite-plugin-image-optimizer": "^1.1.7"
  }
}
